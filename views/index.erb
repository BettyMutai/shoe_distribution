<div class="row">
  <div class="col s6">
    <h1>Stores</h1>
    <form action="/stores" method="post">
      <label for="store">Store Name:</label>
      <input class="form-control" type="text" name="store" id="store" required>
      <label for="town">Town Located:</label>
      <input class="form-control" type="text" name="town" id="town" required>
      <label for="street">Street Located:</label>
      <input class="form-control" type="text" name="street" id="street" required>
      <label for="image">Image</label>
      <input class="form-control" type="text" name="image" id="image">
      <label for="size">Size</label>
      <input class="form-control" type="text" name="size" id="size">
      <label for="cost">cost</label>
      <input class="form-control" type="text" name="cost" id="cost">

      <label for="brand">Add Brand</label></br>
      <% if @brands.any? %>
        <% @brands.each do |brand| %>
          <input type="checkbox" name="brand_id" id="<%= brand.name %>" value="<%= brand.id %>">
          <label for="<%= brand.name %>"><%= brand.name %></label></br>
        <% end %>
      <% else %>
        <p>Please add brands</p>
      <% end %>

      <button type="submit">Add Store</button>
    </form>
    <div class="card">
      <% if @stores.any? %>
        <% @stores.each do |store| %>
          <ul>
            <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
          </ul>
        <% end %>
      <% else %>
        <p>Nothing here :(</p>
      <% end %>

    </div>
  </div>
  <div class="col s6">
    <h1>Brands</h1>
    <form action="/brands" method="post">
      <label for="brand">Shoe Brand:</label>
      <input class="form-control" type="text" name="brand" id="brand" placeholder="eg. Addidas" required>
      
    <button type="submit">Add Brand</button>
    </form>
    <div class="card">
      <% if @brands.any? %>
        <% @brands.each do |brand| %>
          <ul>
            <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
          </ul>
        <% end %>
      <% else %>
        <p>Nothing here :(</p>
      <% end %>

    </div>

  </div>

</div>
