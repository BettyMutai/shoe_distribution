<h2><%= @brand.name %></h2>
<% @brand.stores.each do |store| %>
<ul>
  <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
</ul>
<% end %>

<form action="/brands/<%= @brand.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Delete</button>
</form>
</div>

<div class="col s6">
<h3>Edit Brand:</h3>
<form action="/brands/<%= @brand.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="brand">Shoe Brand:</label>
  <input class="form-control" type="text" name="brand" id="brand" placeholder="eg. Addidas" required>

<button type="submit">Edit</button>
</form>
</div>
